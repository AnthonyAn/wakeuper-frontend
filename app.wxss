.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.divider {
  width: 100%;
  border-top: 0.5px rebeccapurple solid;
}

.userinfo-avatar{
  background-color: darkorange;
  width: 90px;
  height: 90px;
  border-radius: 50%;
  margin-bottom: 70px;
}

.userinfo-avatar-s{
  background-color: darkorange;
  width: 45px;
  height: 45px;
  border-radius: 50%;
  margin: 20px 0px;
}

.main {
  background-color: seashell;
  padding: 10px 10px;
  border: solid papayawhip 2px;
}

.avator {
  width: 24px;
  height: 24px;
  border-radius: 50%;
}

.user {
  padding-right: 20px;
  padding-left: 20px;
  padding-bottom: 5px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  color: grey;
  font-size: 12px;
  font-weight: bold;
}