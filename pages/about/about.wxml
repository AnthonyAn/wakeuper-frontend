<!--pages/about/about.wxml-->
<view class="container" style="align-items:flex-start;margin:15rpx">

  <view class="article">
    <image class="image" mode="aspectFill" src="{{about.imgurl}}"></image>
    <view class="title">苏州大学wakeup俱乐部</view>
    <view class="author">编辑 | <text style="font-weight:300">{{about.author}}</text></view>
    <view class="author">日期 | <text style="font-weight:300">{{about.date}}</text></view>
    <view class="divider"></view>
    <view class="content">{{about.content}}</view>
  </view>
  <view class="btn_fixed" bindtap="goto">
  <image src="../../images/icon_05.png" style="height:100rpx;width:100rpx" mode="scaleToFill">
  </image>
  </view>
</view>